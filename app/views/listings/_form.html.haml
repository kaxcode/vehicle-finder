= form_for @listing, html: { class: "form-horizontal", role: "form" } do |f|
  -if @listing.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@listing.errors.count, "error")} prohibited this listing from being saved:"

      %ul
        - @listing.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :year, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :year, class: 'form-control'
  .form-group
    = f.label :make, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :make, class: 'form-control'
  .form-group
    = f.label :model, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :model, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :price, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :price, class: 'form-control'
  .form-group
    = f.label :color, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :color, class: 'form-control'
  .form-group
    = f.label :transmission, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :transmission, class: 'form-control'
  .form-group
    = f.label :body_type, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :body_type, class: 'form-control'
  .form-group
    = f.label :vehicle_type, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :vehicle_type, options_for_select(Listing::VEHICLES, @listing.vehicle_type), class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
