.page-header
  = link_to root_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_listing_path(@listing), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show listing

%dl.dl-horizontal
  %dt Year:
  %dd= @listing.year
  %dt Make:
  %dd= @listing.make
  %dt Model:
  %dd= @listing.model
  %dt Description:
  %dd= @listing.description
  %dt Price:
  %dd= @listing.price
  %dt Color:
  %dd= @listing.color
  %dt Transmission:
  %dd= @listing.transmission
  %dt Body type:
  %dd= @listing.body_type
  %dt Vehichle type:
  %dd= @listing.vehicle_type
