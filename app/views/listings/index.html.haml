.page-header
  = link_to new_listing_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Listing
%h1 Listing listings

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Year
        %th Make
        %th Model
        %th Description
        %th Price
        %th Color
        %th Transmission
        %th Body type
        %th Vehicle type
        %th Vehicle Image
        %th{colspan: 3}

    %tbody
      - @listings.each do |listing|
        %tr
          %td= listing.year
          %td= listing.make
          %td= listing.model
          %td= listing.description
          %td= listing.price
          %td= listing.color
          %td= listing.transmission
          %td= listing.body_type
          %td= listing.vehicle_type
          %td
            - if listing.vehicle_image
              = image_tag attachment_url(listing, :vehicle_image), size: "200x200"
          %td
            = link_to listing do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_listing_path(listing) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to listing, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
